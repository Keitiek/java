		case '/' :
			answer = num1 / num2;
			break;
		case '%' :
			answer = num1 % num2;
			break;
		case '-' :
			answer = num1 - num2;
			break;
		default:
		System.out.println("Invalid command");
		}
		System.out.println("the result is : " + answer);
		
